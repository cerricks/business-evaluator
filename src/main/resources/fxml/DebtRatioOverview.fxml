<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>

<TitledPane animated="false" collapsible="false" focusTraversable="false" maxHeight="5000.0" minHeight="300.0" minWidth="-Infinity" prefWidth="600.0" text="Debt Ratio to Cash" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.cerricks.evaluator.controller.DebtRatioOverviewController">
    <content>
        <VBox spacing="5.0">
            <children>
                <TableView fx:id="debtRatioTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="175.0" text="Description" />
                        <TableColumn text="Original Cash Flow">
                            <columns>
                                <TableColumn fx:id="preDebtPercentageColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Percentage" />
                                <TableColumn fx:id="preDebtMultipleColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Multiple" />
                            </columns>
                        </TableColumn>
                        <TableColumn text="Cash After Tax">
                            <columns>
                                <TableColumn fx:id="postTaxPercentageColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Percentage" />
                                <TableColumn fx:id="postTaxMultipleColumn" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Multiple" />
                            </columns>
                        </TableColumn>
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </content>
</TitledPane>
