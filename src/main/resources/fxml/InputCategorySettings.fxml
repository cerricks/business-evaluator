<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.cerricks.evaluator.controller.InputCategorySettingsController">
    <content>
        <VBox spacing="5.0">
            <children>
                <TableView fx:id="inputCategoryTable" editable="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Category" />
                        <TableColumn fx:id="loanRateColumn" prefWidth="250.0" text="Loan Details" />
                        <TableColumn fx:id="typeColumn" prefWidth="150.0" text="Type" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_LEFT" prefHeight="12.0" prefWidth="750.0" spacing="5.0">
                    <children>
                        <TextField fx:id="nameField" prefHeight="25.0" prefWidth="200.0" promptText="Enter name" />
                        <TextField fx:id="rateField" alignment="CENTER_RIGHT" prefWidth="60.0" promptText="Rate %" />
                        <Label text="over" />
                        <Spinner fx:id="termField" editable="true" prefHeight="25.0" prefWidth="65.0" />
                        <ComboBox fx:id="termUnitField" prefHeight="25.0" prefWidth="80.0" />
                        <Button mnemonicParsing="false" onAction="#handleAdd" text="Add" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </content>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</ScrollPane>
